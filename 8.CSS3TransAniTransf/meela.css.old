* {
    box-sizing: border-box;
}

body{
    background: black;
}

.text{
    color: pink;
    text-align: center;
}

img{
    width: 300px;
    height: 300px;
    transition: visibility 5s;
    transition-timing-function: ease;
}

img:hover{
    visibility: hidden;
}

.centerAlign{
    margin-left: auto;
    margin-right: auto;
    padding: 50px;
}

.headingImage{
    /*for overlay*/
    position: relative;
    background-size: contain;
    background-repeat: no-repeat;
    border-radius: 10px;

    /*for positioning*/
    float: left;
    width: 33.33%;
    padding: 75px;
}

#headingImages::after{
    content: "";
    clear: both;
    display: table;
}

.overlay{
    opacity: 0;
    transition:opacity 0.3s;
    background-color: lightpink;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    text-align: center;
}

.headingImage:hover > .overlay{
    opacity: 0.5;
}

#imageText{
    display: none;
}